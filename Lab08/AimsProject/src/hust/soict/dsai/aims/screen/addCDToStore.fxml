<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Options">
                  <items>
                        <Menu mnemonicParsing="false" text="Update Store">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#addBookToStore" text="Add Book" />
                              <MenuItem mnemonicParsing="false" text="Add CD" />
                              <MenuItem mnemonicParsing="false" onAction="#addDVDToStore" text="Add DVD" />
                          </items>
                        </Menu>
                    <MenuItem mnemonicParsing="false" onAction="#viewStore" text="View Store" />
                        <MenuItem mnemonicParsing="false" onAction="#viewCart" text="View Cart" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Label text="ADD CD TO STORE" textFill="AQUA">
               <font>
                  <Font size="50.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <VBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="10.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                           <children>
                              <Label text="Title:">
                                 <padding>
                                    <Insets left="10.0" />
                                 </padding>
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                           </children>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                           <children>
                              <Label text="Category:">
                                 <padding>
                                    <Insets left="10.0" />
                                 </padding>
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                           </children>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                           <children>
                              <Label text="Artist:">
                                 <padding>
                                    <Insets left="10.0" />
                                 </padding>
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                           </children>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="100.0" prefHeight="100.0" spacing="10.0">
                           <children>
                              <Label text="Tracks:">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                                 <padding>
                                    <Insets left="10.0" />
                                 </padding>
                              </Label>
                           </children>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                           <children>
                              <Label text="Director:">
                                 <padding>
                                    <Insets left="10.0" />
                                 </padding>
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                           </children>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                           <children>
                              <Label text="Cost ($):">
                                 <padding>
                                    <Insets left="10.0" />
                                 </padding>
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                           </children>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </HBox>
                     </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                           <children>
                              <TextField fx:id="tfTitle" prefWidth="250.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                           <children>
                              <TextField fx:id="tfCategory" prefWidth="250.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                           <children>
                              <TextField fx:id="tfArtist" prefWidth="250.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                           <children>
                              <TextField fx:id="tfTracks" editable="false" prefWidth="200.0" />
                              <Button mnemonicParsing="false" onAction="#addTrackBtnPressed" text="Add" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                           <children>
                              <TextField fx:id="tfDirector" prefWidth="250.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="118.0" prefHeight="100.0" spacing="10.0">
                           <children>
                              <TextField fx:id="tfCost" prefWidth="250.0" />
                           </children>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </HBox>
                     </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
            <VBox alignment="CENTER_RIGHT" spacing="10.0">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
               <children>
                  <Button mnemonicParsing="false" onAction="#addBtnPressed" text="Add">
                     <font>
                        <Font size="30.0" />
                     </font></Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
